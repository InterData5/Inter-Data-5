@page
@model Presentacion.Pages.Login.ClaveModel

@{
    Layout = "./Login/Layout";

}
@{
    ViewData["Title"] = "Cambio De Credenciales";
}
<div class="row justify-content-center">
    <h4 class="headertekst">Cambio Clave</h4>
</div>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label class="control-label">User</label>
                <input type="hidden" asp-for="Users" class="form-control" value="@Model.Users1" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label control-label">Password</label>
                <input type="password" asp-for="Password1" class="form-control" />
                <span class="text-danger">@Model.Mensaje</span>
            </div>
            <div class="form-group ">
                <label control-label">Confirmar Password</label>
                <input type="password" asp-for="Password2" class="form-control" />
                <span class="text-danger">@Model.Mensaje</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>