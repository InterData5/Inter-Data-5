@page
@model Presentacion.Pages.CrudUsuario.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Usuarios</h1>

<p>
    <a asp-page="..\CrudCliente\Index" class="btn btn-primary">Clientes</a>
    <a asp-page="..\CrudEmpleado\Index" class="btn btn-primary">Empleados</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Usuario[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario[0].Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario[0].Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario[0].User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Usuario) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User)
            </td>

            <td>

                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-secondary"class="btn btn-secondary">Details</a>

            </td>
        </tr>
}
    </tbody>
</table>
