@page
@model Presentacion.Pages.CrudConsola.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-secondary"><img src="~/Media/Agregar.png"> Add Consola</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Consolas[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consolas[0].Version)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consolas[0].Fabricante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consolas[0].CapacidadAlmacenamientoConsola)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consolas[0].TipoAlmacenamiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consolas[0].VelocidadMemoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consolas[0].VelocidadProcesamiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consolas[0].NumeroControles)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consolas[0].PrecioVenta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Consolas) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Version)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fabricante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CapacidadAlmacenamientoConsola)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoAlmacenamiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VelocidadMemoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VelocidadProcesamiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroControles)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioVenta)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-secondary"><img src="~/Media/Editar.png"> Edit</a>
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-secondary"> Details</a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-secondary"><img src="~/Media/Eliminar.png"> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
